{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "target": "es2015"
  },
  "include": [
    "**/*.ts"
  ]
}
